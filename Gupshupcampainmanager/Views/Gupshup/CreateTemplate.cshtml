<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gupshup Dynamic Campaign</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .container { max-width: 800px; margin-top: 20px; }
        .form-section { margin-bottom: 30px; }
        .alert { margin-top: 20px; }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center mb-4">Campaign Template</h1>

        @if (ViewBag.Message != null)
        {
            <div class="alert alert-info">@ViewBag.Message</div>
        }

        <!-- Create Template Form -->
        <div class="form-section">
            <h3>Create Template</h3>
            <form asp-action="CreateTemplate" method="post" class="border p-4 rounded">
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input  class="form-control" placeholder="e.g., promo_offer_image_2025" required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Image URL</label>
                    <input  class="form-control" placeholder="e.g., https://example.com/images/promo_sample.jpg" required />
                </div>
                <button type="submit" class="btn btn-primary">Create Template</button>
            </form>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>