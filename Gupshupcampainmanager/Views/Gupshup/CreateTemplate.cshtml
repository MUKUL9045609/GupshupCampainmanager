@{
    string pageTitle = ViewData["Title"]?.ToString() ?? "Create Campaign Template";
}

    <style>
        .container { max-width: 800px; margin-top: 20px; }
        .form-section { margin-bottom: 30px; }
        .alert { margin-top: 20px; }
    </style>
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h3 class="mb-2">Create Campaign Template</h3>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Campaign Template</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
                <div class="col-xl-8 col-lg-8 col-md-8 col-sm-12 col-12">
                    <div class="card p-4">
                        <h1 class="text-center mb-4">Campaign Template</h1>

                        @if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info">@ViewBag.Message</div>
                        }

                        <!-- Create Template Form -->
                        <div class="form-section">
                            <h3>Create Template</h3>
                            <form asp-action="CreateTemplate" method="post" class="border p-4 rounded">
                                <div class="mb-3">
                                    <label class="form-label">Description</label>
                                    <input  class="form-control" placeholder="e.g., promo_offer_image_2025" required />
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Image URL</label>
                                    <input  class="form-control" placeholder="e.g., https://example.com/images/promo_sample.jpg" required />
                                </div>
                                <button type="submit" class="btn btn-primary">Create Template</button>
                            </form>
                        </div>

                     </div>
                </div>
        </div>

