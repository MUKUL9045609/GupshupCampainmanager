                            <div id="DataTables_Table_0_filter" class="dataTables_filter"><label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0"></label></div>
                            </div>

                        </div> *@


                        <div class="row">
                            <div class="col-sm-12">
                                <table id="customerTable" class="table table-striped align-middle">
                                    <thead class="table-light">
                                        <tr>

                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Mobile No.</th>
                                            <th>Address</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var list in Model.Customers)
                                        {
                                            <tr>
                                                <td>@list.Id</td>
                                                <td>@list.CustomerName</td>
                                                <td>@list.MobileNo</td>
                                                <td>@list.Address</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end basic table  -->
    <!-- ============================================================== -->
</div>

@section scripts {
    <script>
                $(document).ready(function () {
            $('#customerTable').DataTable();
        });

        function exportAllFilteredToExcel(tableId, filename = '') {
            var table = $('#' + tableId).DataTable();
            var filteredRows = table.rows({ search: 'applied' }).nodes();

       
            var exportTable = $('<table></table>');

            
            exportTable.append($(table.table().header()).clone());

         
            $(filteredRows).each(function () {
                exportTable.append($(this).clone());
            });

         
            var now = new Date();
            var dateString =
                ('0' + now.getDate()).slice(-2) + '-'
                + ('0' + (now.getMonth() + 1)).slice(-2) + '-'
                + now.getFullYear().toString() + '_'
                + ('0' + now.getHours()).slice(-2)
                + ('0' + now.getMinutes()).slice(-2)
                + ('0' + now.getSeconds()).slice(-2);

            var exportFileName = (filename ? filename : "Export") + "_" + dateString + ".xlsx";

           
            var workbook = XLSX.utils.table_to_book(exportTable[0], { sheet: "Sheet1" });

          
            var ws = workbook.Sheets["Sheet1"];
            ws['!cols'] = [
                { wch: 6 },   
                { wch: 20 },  
                { wch: 20 },  
                { wch: 30 }   
            ];

            XLSX.writeFile(workbook, exportFileName);
        }


    </script>
}
